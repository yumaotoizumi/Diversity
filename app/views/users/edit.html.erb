<h4>ユーザー編集ページ</h4>

<%= form_for(@user) do |f|%>
<table>
		<thead>
		</thead>
		<tbody>
			<tr>
				<th>名前</th>
				<td><%= f.text_field :name%></td>
			</tr>


			<tr>
				<th>メールアドレス</th>
				<td><%= f.text_field :email%></td>
			</tr>

			<tr>
				<th>住所</th>
				<td><%= f.text_field :phone_number%></td>
			</tr>
			<tr>
				<th></th>
			    <td><%= f.submit "変更を保存"%></td>
			</tr>
			<tr>
				<th></th>
			    <td><%= link_to "戻る", user_path %></td>
			</tr>
		</tbody>
</table>
<%end%>
